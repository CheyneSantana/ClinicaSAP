    <div class="row">
        <div class="text-center">
            <img class="img-praja-passos" src="~/img/praja/passos.jpg" />
        </div>
    </div>
    <hr />
    <div class="row">
        <div class="col-sm-12 div-insc-praja">
            <form role="form">
                <legend class="text-center">Faça a sua inscrição no programa</legend>
                <fieldset>
                    <div class="row">
                        <div class="col-md-12 text-center">
                            <div class="form-group tex">
                                <input id="nome" class="form-control" type="text" ng-model="praja.PrajaDTO.NOME" placeholder="Nome Completo" />
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <input id="dtnascimento" class="form-control" type="text" mask="39/19/9999" ng-model="praja.PrajaDTO.DTNASCIMENTO" placeholder="Data de Nascimento" />
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <input id="endereco" class="form-control" type="text" ng-model="praja.PrajaDTO.ENDERECO" placeholder="Endereço" />
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <input class="form-control" type="email" ng-model="praja.PrajaDTO.EMAIL" placeholder="Email" />
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <input class="form-control" type="tel" ng-model="praja.PrajaDTO.TELEFONE" placeholder="Telefone" mask="(99) 99999-9999" />
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <textarea class="form-control" type="text" ng-model="praja.PrajaDTO.PERGUNTA" placeholder="Por que quer mudar seu estilo de vida?"></textarea>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Enviar foto de corpo inteiro: </label>
                                <input type="file" name="file" accept="image/*" ngf-max-size="5MB" required />
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-1">
                            <div class="form-group">
                                <button class="btn btn-success fa fa-address-card-o" ng-click="praja.Cadastrar()"> Cadastrar</button>
                            </div>
                        </div>
                        <div class="col-md-1">
                            <div class="form-group">
                                <button class="btn btn-danger fa fa-trash-o" ng-click="praja.limparCampos()"> Limpar</button>
                            </div>
                        </div>
                    </div>
                </fieldset>
            </form>
        </div>
    </div>
</div>